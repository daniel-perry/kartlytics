#!/bin/bash

#
# find-metadata: enumerate kartlytics video transcript objects
#

arg0="$(basename $0)"

function fail
{
	echo "$arg0: $@" >&2
	exit 1
}

function usage
{
	[[ $# -gt 0 ]] && echo "$arg0: $@" >& 2
	cat <<EOF >&2
usage: $arg0 DIRECTORY

Emits the names of kartlytics video metadata objects in the given directory.
EOF
	exit 2
}

[[ $# -eq 1 ]] || usage "directory expected"
mfind -t o -n 'transcript\.json$' "$1"
